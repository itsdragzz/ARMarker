// firestore.rules
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /flags/{flagId} {
      // Allow read access to all flags
      allow read: if true;
      
      // Allow anyone to create new flags
      allow create: if true;
      
      // Allow anyone to update or delete flags (for simplicity)
      // In a real app, you would restrict this
      allow update, delete: if true;
    }
  }
}